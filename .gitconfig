[push]
  default = simple
[pager]
  branch = false
  tag = false
[pull]
  ff = only
[alias]
  lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold red)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(cyan)<%an>%C(reset)%C(bold yellow)%d%C(reset)' --all --date-order
  unstage = reset HEAD
  b = branch
  df = diff
  dif = diff
  st = status
  cached = diff --cached
  co = checkout
  sw = switch
  ignored = !git ls-files -v | grep ^[a-z]
  amend = commit --amend

  # === Integrated with fzf ===============================================
  # = ref. http://www.mimul.com/pebble/default/2019/08/23/1566550403384.html
  # stash list
  stl = !git stash list \
    | fzf --preview 'echo {} \
    | cut -d: -f1 \
    | xargs git stash show -p --color=always' --height 90% \
    | cut -d: -f1
  # commit list with diff
  ls = !git lg \
    | fzf -m --ansi --layout=reverse --preview=\"echo {} \
    | sed 's/-.*$//' \
    | egrep -o '[0-9a-f]+' \
    | xargs git show --color=always\" \
    | sed 's/-.*$//' \
    | egrep -o '[0-9a-f]+'
  # current diff
  di = "!f() { args=$@; [ -z \"$args\" ] && args=HEAD; ([ \"$args\" = \"HEAD\" ] \
    && git status --short || git diff --name-status $args | sed 's/\t/  /') \
    | fzf --preview \"echo {} | cut -c 4- | xargs git diff --color=always $args \
    --\" --multi --height 90% | cut -c 4-; }; f"
  # branch diff
  lsb = !git branch \
    | fzf --preview 'echo {} | cut -c3- | xargs git show --color=always' --height 90% \
    | cut -c3-
